<div class = 'container mt-5'>
  <div class = 'card'>
    <div class = 'card-body'>
      <p class='card-title'><strong><%= @restaurant.name %></strong></p>
      <p class='card-text'><%= @restaurant.address %></p>
      <p class='card-text'><%= @restaurant.phone_number %></p>
      <%= @restaurant.category %>
    </div>
    <div class = 'card-body'>
      <p><strong>Reviews</strong></p>
      <ul class='list-group'>
        <% @restaurant.reviews.each do |review| %>
          <li class='list-group-item'>
            <%= review.content %>
            <%= review.rating %>
          </li>
        <% end %>
      </ul>
    </div>
    <div class = 'container'>
      <%= simple_form_for [@restaurant, @review] do |f| %>
        <%= f.input :rating, collection: 0..5 %>
        <%= f.input :content%>
        <%= f.submit class: 'btn btn-primary' %>
        <%= link_to "Back", restaurants_path, class: 'btn btn-outline-danger' %>
      <% end %>
    </div>
  </div>
</div>
